<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    >
    <!-- 圆角半径 -->
    <corners android:radius="15dp" />

    <!-- 边框 -->
    <!-- android:width="1dp" 边框线的厚度 -->
    <!-- android:color="#000000" 颜色-->
    <!-- android:dashWidth="5dp" 间隔长度-->
    <!-- android:dashGap="2dp" 间隔宽度-->
    <stroke android:width="1dp"
        android:color="#8B7765"
        android:dashWidth="5dp"
        android:dashGap="2dp"/>

    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"
        />
</shape>