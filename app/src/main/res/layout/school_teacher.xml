<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bcdf77"
    tools:context=".School.Teacher"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.animaland.PassThroughButton
            android:id="@+id/teacher_desk"
            android:layout_width="1232dp"
            android:layout_height="784dp"
            android:layout_marginLeft="-150dp"
            android:scaleType="fitCenter"
            android:transitionName="desk"
            android:background="@drawable/btn_desk"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/closet_arrow"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:clickable="true"/>

    <com.example.animaland.PassThroughButton
        android:id="@+id/desk_giveClasses"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_toRightOf="@id/back"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/btn_giveclass"/>

    <com.example.animaland.PassThroughButton
        android:id="@+id/desk_timetable"
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:layout_toRightOf="@id/desk_giveClasses"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/btn_timetable"/>

    <com.example.animaland.PassThroughButton
        android:id="@+id/desk_photo"
        android:layout_width="130dp"
        android:layout_height="140dp"
        android:layout_toRightOf="@id/desk_timetable"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/btn_diary"/>


</RelativeLayout>