<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEAE0"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="220dp"
            android:layout_marginLeft="640dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#E6DDD4"
            >
            <androidx.cardview.widget.CardView
                android:layout_centerVertical="true"
                android:layout_width="160dp"
                android:layout_height="70dp"

                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="#F0E5D0"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp">

                <Chronometer
                    android:layout_gravity="center"
                    android:id="@+id/timer"
                    android:textSize="13pt"
                    android:fontFamily="@font/cute_font"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_centerVertical="true"
                    android:layout_width="70dp"
                    android:layout_height="70dp"

                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="31dp"
                    app:cardBackgroundColor="#F0E5D0"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/camera"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/camera_off"
                        android:background="@drawable/camera_selector"
                        android:clickable="true"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_centerVertical="true"
                    android:layout_width="70dp"
                    android:layout_height="70dp"

                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="17dp"
                    app:cardBackgroundColor="#F0E5D0"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/micro_phone"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/micro_of"
                        android:background="@drawable/microphone_selector"
                        android:clickable="true"/>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/video_view_container1"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:background="@drawable/pic1"
        tools:ignore="MissingConstraints">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/video_view_container2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/video_view_container1"
        android:scaleType="fitXY"
        android:background="@drawable/pic1"
        tools:ignore="MissingConstraints">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/video_view_container3"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="210dp"
        android:scaleType="fitXY"
        android:background="@drawable/pic1"
        tools:ignore="MissingConstraints">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/video_view_container4"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="210dp"
        android:layout_toRightOf="@+id/video_view_container3"
        android:scaleType="fitXY"
        android:background="@drawable/pic1"
        tools:ignore="MissingConstraints">
    </FrameLayout>

    <com.hitomi.cmlibrary.CircleMenu
        android:id="@+id/circle_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="650dp"
        android:layout_marginTop="190dp"
        android:layout_marginRight="5dp"
        tools:ignore="MissingConstraints" />

</RelativeLayout>