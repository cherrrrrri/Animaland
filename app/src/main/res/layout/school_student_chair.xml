<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bcdf77"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.animaland.PassThroughButton
            android:id="@+id/student_chair"
            android:layout_width="1573dp"
            android:layout_height="1199dp"
            android:layout_marginTop="-25dp"
            android:scaleType="fitCenter"
            android:transitionName="chair"
            android:background="@drawable/btn_chair"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/closet_arrow"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:clickable="true"/>

    <com.example.animaland.PassThroughButton
        android:id="@+id/student_ipad"
        android:layout_width="250dp"
        android:layout_height="230dp"
        android:layout_toRightOf="@id/back"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/btn_ipad"/>

</RelativeLayout>