<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_dialog_lightcolor"
    android:padding="30dp">

    <TextView
        android:id="@+id/roomshow_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/newRoomName"
        android:paddingVertical="8dp"
        android:text="房间名称"
        android:fontFamily="@font/font2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/colon_1"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/newRoomName"
        android:layout_toRightOf="@+id/roomshow_name"
        android:paddingVertical="8dp"
        android:text=":"
        android:fontFamily="@font/font2"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/newRoomName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/colon_1"
        android:background="#ffff"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:hint="请输入房间名称"
        android:fontFamily="@font/font2" />

    <RelativeLayout
        android:id="@+id/Layout_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/roomshow_name"
        android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/room_choosePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:text="密码设置"
        android:fontFamily="@font/font2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/colon_2"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/room_choosePass"
        android:layout_alignBottom="@+id/room_choosePass"
        android:paddingVertical="8dp"
        android:text=":"
        android:fontFamily="@font/font2"
        android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radio_pass"
            android:layout_marginVertical="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/colon_2"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/yesPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是"
                android:fontFamily="@font/font2"
                android:textSize="20sp"/>

            <RadioButton
                android:id="@+id/noPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="否"
                android:fontFamily="@font/font2"
                android:textSize="20sp"/>

        </RadioGroup>

    <EditText
        android:id="@+id/editRoomPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/room_choosePass"
        android:layout_alignParentRight="true"
        android:background="#ffff"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingHorizontal="10dp"
        android:hint="请输入房间密码"
        android:fontFamily="@font/font2"
        android:visibility="invisible"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Layout_pass"
        android:padding="10dp"
        android:gravity="center">

    <Button
        android:id="@+id/room_createOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_dialog_darkcolor"
        android:text="确认创建"
        android:fontFamily="@font/font2"
        android:textSize="20sp"
        android:textColor="#fff"
        android:paddingHorizontal="40dp"/>
    </RelativeLayout>
</RelativeLayout>