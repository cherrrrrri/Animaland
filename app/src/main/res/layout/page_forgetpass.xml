<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clt_forgetPass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFEFDB">


    <ImageView
        android:id="@+id/bg_LoginAndSignUp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/buding_open"
        android:scaleType="centerCrop"
        app:layout_constraintHeight_percent="0.27"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animaland"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:fontFamily="@font/font2"
        app:layout_constraintBottom_toBottomOf="@+id/bg_LoginAndSignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg_LoginAndSignUp"
        app:layout_constraintVertical_bias=".1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1">


        <EditText
            android:id="@+id/signUp_phoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请输入手机号码"
            android:fontFamily="@font/font2"
            android:background="@drawable/buttonstyle"
            android:inputType="number"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".1"
            app:layout_constraintWidth_percent=".85" />

        <TextView
            android:id="@+id/tips_phoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:paddingLeft="12dp"
            android:text="!提示文字"
            android:fontFamily="@font/font2"
            android:textColor="#ff11"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/identifyCode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signUp_phoneNumber"
            app:layout_constraintVertical_bias=".1"
            app:layout_constraintWidth_percent=".85" />

        <EditText
            android:id="@+id/identifyCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonstyle"
            android:hint="请输入验证码"
            android:fontFamily="@font/font2"
            android:inputType="number"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/signUp_phoneNumber"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/signUp_phoneNumber"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintWidth_percent=".425" />

        <TextView
            android:id="@+id/tips_identifyCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:paddingLeft="12dp"
            android:text="!提示文字"
            android:fontFamily="@font/cute_font"
            android:textColor="#ff11"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/users_pwd1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/identifyCode"
            app:layout_constraintVertical_bias=".1"
            app:layout_constraintWidth_percent=".85" />

        <Button
            android:id="@+id/code_sent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_dialog_darkcolor"
            android:text="发送验证码"
            android:fontFamily="@font/font2"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/identifyCode"
            app:layout_constraintEnd_toEndOf="@+id/signUp_phoneNumber"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toEndOf="@+id/identifyCode"
            app:layout_constraintTop_toTopOf="@+id/identifyCode"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintWidth_percent="0.3" />

        <EditText
            android:id="@+id/users_pwd1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请设定密码"
            android:fontFamily="@font/font2"
            android:background="@drawable/buttonstyle"
            android:padding="12dp"
            android:inputType="textPassword"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".4"
            app:layout_constraintWidth_percent=".85" />

        <TextView
            android:id="@+id/tips_userPwd1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:paddingLeft="12dp"
            android:text="!提示文字"
            android:fontFamily="@font/font2"
            android:textColor="#ff11"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/users_pwd2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/users_pwd1"
            app:layout_constraintVertical_bias=".1"
            app:layout_constraintWidth_percent=".85" />

        <EditText
            android:id="@+id/users_pwd2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonstyle"
            android:hint="请再次确定密码"
            android:fontFamily="@font/font2"
            android:padding="12dp"
            android:inputType="textPassword"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".55"
            app:layout_constraintWidth_percent=".85" />

        <TextView
            android:id="@+id/tips_userPwd2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:paddingLeft="12dp"
            android:text="!提示文字"
            android:fontFamily="@font/font2"
            android:textColor="#ff11"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/submit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/users_pwd2"
            app:layout_constraintVertical_bias=".1"
            app:layout_constraintWidth_percent=".85" />

        <Button
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_2state"
            android:text="登    录"
            android:fontFamily="@font/font2"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".7"
            app:layout_constraintWidth_percent=".8" />

        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_dialog_darkcolor"
            android:gravity="center"
            android:text="←"
            android:fontFamily="@font/font2"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".9"
            app:layout_constraintWidth_percent=".15" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>