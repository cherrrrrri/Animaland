<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_dialog_lightcolor"
    android:padding="20dp">

    <EditText
        android:id="@+id/room_editPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="#ffff"
        android:hint="请输入密码"
        android:fontFamily="@font/font2"
        android:padding="10dp" />

    <Button
        android:id="@+id/room_enterWithPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/room_editPass"
        android:layout_alignRight="@id/room_editPass"
        android:background="@drawable/btn_dialog_darkcolor"
        android:paddingHorizontal="50dp"
        android:text="进入"
        android:fontFamily="@font/font2"
        android:textSize="20sp"
        android:textColor="#ffff"/>

</RelativeLayout>