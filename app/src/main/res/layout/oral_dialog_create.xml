<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="450dp"
    android:layout_height="230dp"
    android:background="@drawable/btn_dialog_lightcolor"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Tips:如有需要，基本信息请于 "
            android:textColor="@color/dark"
            android:fontFamily="@font/cute_font"/>

        <ImageView
            android:id="@+id/basicData"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/data"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 处修改"
            android:textColor="@color/dark"
            android:fontFamily="@font/cute_font"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:text="房间类型"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:paddingVertical="4dp"
            android:paddingHorizontal="2dp"
            android:gravity="center"
            android:background="@drawable/btn_dialog_lightcolor"
            android:backgroundTint="@color/light_red"
            android:fontFamily="@font/cute_font"
            android:layout_alignParentLeft="true"/>

        <CheckedTextView
            android:id="@+id/tag_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:fontFamily="@font/cute_font"
            android:paddingHorizontal="5dp"
            android:text="聊 天"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/dark"
            android:checkMark="?android:attr/listChoiceIndicatorSingle"
            android:checkMarkTint="@color/dark"
            android:checked="true"/>

        <CheckedTextView
            android:id="@+id/tag_course"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:fontFamily="@font/cute_font"
            android:paddingHorizontal="5dp"
            android:text="课 程"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/dark"
            android:checkMark="?android:attr/listChoiceIndicatorSingle"
            android:checkMarkTint="@color/dark" />

        <View
            android:id="@+id/etOther_mother"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginVertical="1dp"
            android:layout_marginHorizontal="5dp"
            android:text="密码设置"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:paddingVertical="4dp"
            android:paddingHorizontal="2dp"
            android:gravity="center"
            android:background="@drawable/btn_dialog_lightcolor"
            android:backgroundTint="@color/light_green"
            android:fontFamily="@font/cute_font"
            android:layout_alignParentLeft="true"/>

        <CheckedTextView
            android:id="@+id/pass_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:fontFamily="@font/cute_font"
            android:paddingHorizontal="5dp"
            android:text="  无  "
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/dark"
            android:checkMark="?android:attr/listChoiceIndicatorSingle"
            android:checkMarkTint="@color/dark"
            android:checked="true"/>

        <CheckedTextView
            android:id="@+id/pass_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:fontFamily="@font/cute_font"
            android:paddingHorizontal="5dp"
            android:text="  有  "
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/dark"
            android:checkMark="?android:attr/listChoiceIndicatorSingle"
            android:checkMarkTint="@color/dark"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:inputType="number"
            android:background="@drawable/edit_background"
            android:backgroundTint="@color/light_yellow"
            android:hint="设置4位英文大小写或数字密码"
            android:textSize="13sp"
            android:padding="10dp"
            android:fontFamily="@font/cute_font"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_LanguageWantToLearn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginVertical="1dp"
            android:layout_marginHorizontal="5dp"
            android:text="收费设置"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:paddingVertical="4dp"
            android:paddingHorizontal="2dp"
            android:gravity="center"
            android:background="@drawable/btn_dialog_lightcolor"
            android:backgroundTint="@color/light_orange"
            android:fontFamily="@font/cute_font"
            android:layout_alignParentLeft="true"/>

        <CheckedTextView
            android:id="@+id/fee_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:fontFamily="@font/cute_font"
            android:paddingHorizontal="5dp"
            android:text="免 费"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/dark"
            android:checkMark="?android:attr/listChoiceIndicatorSingle"
            android:checkMarkTint="@color/dark"
            android:checked="true"/>

        <CheckedTextView
            android:id="@+id/fee_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:fontFamily="@font/cute_font"
            android:paddingHorizontal="5dp"
            android:text="收 费"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/dark"
            android:checkMark="?android:attr/listChoiceIndicatorSingle"
            android:checkMarkTint="@color/dark"/>


        <EditText
            android:id="@+id/fee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:inputType="numberDecimal"
            android:background="@drawable/edit_background"
            android:backgroundTint="@color/light_yellow"
            android:hint="收取金额为1-10的整数"
            android:textSize="13sp"
            android:padding="10dp"
            android:fontFamily="@font/cute_font"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/create"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_dialog_darkcolor"
            android:text="发 布"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/cute_font" />

    </LinearLayout>

</LinearLayout>
