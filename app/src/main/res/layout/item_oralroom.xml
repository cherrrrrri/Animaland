<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="180dp"
        app:cardBackgroundColor="@color/light_yellow"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:padding="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:orientation="horizontal"
                        android:gravity="top">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="用户昵称"
                            android:textSize="18sp"
                            android:textColor="@color/dark"
                            android:textStyle="bold"
                            android:fontFamily="@font/cute_font"/>

                        <TextView
                            android:id="@+id/type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingVertical="2dp"
                            android:paddingHorizontal="5dp"
                            android:text="社 交"
                            android:textStyle="bold"
                            android:textColor="@color/dark"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:background="@drawable/btn_dialog_lightcolor"
                            android:backgroundTint="@color/yellow"
                            android:fontFamily="@font/cute_font"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/introduction"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="爱口语的小姐姐一枚吖~"
                        android:textSize="13sp"
                        android:textColor="@color/dark"
                        android:fontFamily="@font/cute_font"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginVertical="1dp"
                            android:text="母 语"
                            android:textSize="9sp"
                            android:textColor="@color/white"
                            android:paddingVertical="1dp"
                            android:paddingHorizontal="2dp"
                            android:gravity="center"
                            android:background="@drawable/btn_dialog_lightcolor"
                            android:backgroundTint="@color/light_red"
                            android:fontFamily="@font/cute_font"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:id="@+id/motherLanguage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.5"
                            android:text="英语"
                            android:textSize="13sp"
                            android:textColor="@color/dark"
                            android:paddingLeft="3dp"
                            android:fontFamily="@font/cute_font"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginVertical="1dp"
                            android:text="擅 长"
                            android:textSize="9sp"
                            android:textColor="@color/white"
                            android:paddingVertical="1dp"
                            android:paddingHorizontal="2dp"
                            android:gravity="center"
                            android:background="@drawable/btn_dialog_lightcolor"
                            android:backgroundTint="@color/light_green"
                            android:fontFamily="@font/cute_font"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:id="@+id/LanguageGoodAt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.5"
                            android:text="法语、日语"
                            android:textSize="13sp"
                            android:textColor="@color/dark"
                            android:paddingLeft="3dp"
                            android:fontFamily="@font/cute_font"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_LanguageWantToLearn"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginVertical="1dp"
                            android:text="学 习"
                            android:textSize="9sp"
                            android:textColor="@color/white"
                            android:paddingVertical="1dp"
                            android:paddingHorizontal="2dp"
                            android:gravity="center"
                            android:background="@drawable/btn_dialog_lightcolor"
                            android:backgroundTint="@color/light_orange"
                            android:fontFamily="@font/cute_font"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:id="@+id/LanguageWantToLearn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.5"
                            android:text="汉语、西班牙语"
                            android:textSize="13sp"
                            android:textColor="@color/dark"
                            android:paddingLeft="3dp"
                            android:fontFamily="@font/cute_font"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/roomcheck_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_alignBottom="@+id/enter"
                    android:text="ID:"
                    android:textSize="10sp"
                    android:textColor="#999999"/>

                <TextView
                    android:id="@+id/ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/roomcheck_ID"
                    android:layout_alignBottom="@+id/roomcheck_ID"
                    android:paddingLeft="2dp"
                    android:text="我是ID"
                    android:textSize="10sp"
                    android:textColor="#999999"/>

                <Button
                    android:id="@+id/enter"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginVertical="5dp"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/btn_dialog_darkcolor"
                    android:fontFamily="@font/cute_font"
                    android:text="进 入"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
