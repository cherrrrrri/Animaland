<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="450dp"
    android:layout_height="230dp"
    android:background="@drawable/btn_dialog_lightcolor"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=" 随机匹配 "
            android:textStyle="bold"
            android:textColor="@color/dark"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/cute_font"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:text="房间类型"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:paddingVertical="4dp"
            android:paddingHorizontal="2dp"
            android:gravity="center"
            android:background="@drawable/btn_dialog_lightcolor"
            android:backgroundTint="@color/light_red"
            android:fontFamily="@font/cute_font"
            android:layout_alignParentLeft="true"/>

        <CheckedTextView
            android:id="@+id/tag_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:fontFamily="@font/cute_font"
            android:paddingHorizontal="5dp"
            android:text="聊 天"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/dark"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:checkMarkTint="@color/dark"
            android:checked="true"/>

        <CheckedTextView
            android:id="@+id/tag_course"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:fontFamily="@font/cute_font"
            android:paddingHorizontal="5dp"
            android:text="课 程"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/dark"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:checkMarkTint="@color/dark" />

        <View
            android:id="@+id/etOther_mother"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginVertical="1dp"
            android:layout_marginHorizontal="5dp"
            android:text="语  言"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:paddingVertical="4dp"
            android:paddingHorizontal="2dp"
            android:gravity="center"
            android:background="@drawable/btn_dialog_lightcolor"
            android:backgroundTint="@color/light_green"
            android:fontFamily="@font/cute_font"
            android:layout_alignParentLeft="true"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_choose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/match"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_dialog_darkcolor"
            android:text="开始匹配"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:paddingHorizontal="5dp"
            android:fontFamily="@font/cute_font" />

    </LinearLayout>

</LinearLayout>
