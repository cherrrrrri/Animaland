<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.drawerlayout.widget.DrawerLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--  内容页布局  -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2.5"
            android:background="@drawable/table">

            <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/closet_arrow"
                android:clickable="true"></ImageView>

            <ImageView
                android:id="@+id/money"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:scaleType="fitXY"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/money"
                android:clickable="true"></ImageView>

            <TextView
                android:id="@+id/moneyAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="10$"
                android:fontFamily="@font/font2"
                android:layout_marginTop="270dp"
                android:textColor="@color/black"
                android:layout_marginLeft="55dp" />

            <ImageView
                android:id="@+id/back2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="830dp"
                android:src="@drawable/closet_arrow"
                android:clickable="true"></ImageView>


            <RelativeLayout
                android:id="@+id/animal_container"
                android:layout_width="491dp"
                android:layout_height="340dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="60dp"
                android:scaleType="fitXY">


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/neck_container"
                android:layout_width="350dp"
                android:layout_height="240dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="160dp"
                android:scaleType="fitXY"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/head_container"
                android:layout_width="500dp"
                android:layout_height="250dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="60dp"
                android:scaleType="fitXY"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/ornament_container"
                android:layout_width="200dp"
                android:layout_marginLeft="380dp"
                android:layout_marginTop="165dp"
                android:scaleType="fitXY"
                android:layout_height="200dp">
            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/drawer"
            android:layout_width="225dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="end">

            <View
                android:id="@+id/view_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"></View>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbars"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorAccent"
                app:contentInsetStart="0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_title_head"
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:padding="15dp"
                            android:src="@drawable/head" />

                        <ImageView
                            android:id="@+id/iv_title_neck"
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="13dp"
                            android:src="@drawable/neck" />

                        <ImageView
                            android:id="@+id/iv_title_ornament"
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:padding="15dp"
                            android:src="@drawable/ornament" />

                        <ImageView
                            android:id="@+id/iv_title_animal"
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:padding="15dp"
                            android:src="@drawable/iv_title_animal" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vp_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants" />


        </LinearLayout>


    </androidx.drawerlayout.widget.DrawerLayout>
</layout>
