<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <EditText
        android:id="@+id/signUp_phoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstyle"
        android:hint="请输入手机号码"
        android:fontFamily="@font/cute_font"
        android:inputType="number"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".1"
        app:layout_constraintWidth_percent=".85" />

    <TextView
        android:id="@+id/tips_phoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="!提示文字"
        android:fontFamily="@font/cute_font"
        android:textColor="#ff11"
        android:paddingLeft="12dp"
        android:visibility="invisible"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toTopOf="@+id/identifyCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUp_phoneNumber"
        app:layout_constraintVertical_bias=".1"
        app:layout_constraintWidth_percent=".85" />

    <EditText
        android:id="@+id/identifyCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstyle"
        android:hint="请输入验证码"
        android:fontFamily="@font/cute_font"
        android:inputType="number"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/signUp_phoneNumber"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/signUp_phoneNumber"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintWidth_percent=".425" />

    <Button
        android:id="@+id/code_sent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_dialog_darkcolor"
        android:text="发送验证码"
        android:fontFamily="@font/cute_font"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/identifyCode"
        app:layout_constraintEnd_toEndOf="@+id/signUp_phoneNumber"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toEndOf="@+id/identifyCode"
        app:layout_constraintTop_toTopOf="@+id/identifyCode"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintWidth_percent="0.35" />

    <TextView
        android:id="@+id/tips_identifyCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:paddingLeft="12dp"
        android:text="!提示文字"
        android:fontFamily="@font/cute_font"
        android:textColor="#ff11"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/users_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/identifyCode"
        app:layout_constraintVertical_bias=".1"
        app:layout_constraintWidth_percent=".85" />

    <EditText
        android:id="@+id/users_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="请输入用户名"
        android:fontFamily="@font/cute_font"
        android:padding="12dp"
        android:background="@drawable/buttonstyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".4"
        app:layout_constraintWidth_percent=".85" />

    <TextView
        android:id="@+id/tips_userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:paddingLeft="12dp"
        android:text="!提示文字"
        android:fontFamily="@font/cute_font"
        android:textColor="#ff11"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/users_pwd1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/users_name"
        app:layout_constraintVertical_bias=".1"
        app:layout_constraintWidth_percent=".85" />

    <EditText
        android:id="@+id/users_pwd1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="请设定密码"
        android:fontFamily="@font/cute_font"
        android:background="@drawable/buttonstyle"
        android:padding="12dp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".55"
        app:layout_constraintWidth_percent=".85" />

    <TextView
        android:id="@+id/tips_userPwd1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:paddingLeft="12dp"
        android:text="!提示文字"
        android:fontFamily="@font/cute_font"
        android:textColor="#ff11"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/users_pwd2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/users_pwd1"
        app:layout_constraintVertical_bias=".1"
        app:layout_constraintWidth_percent=".85" />

    <EditText
        android:id="@+id/users_pwd2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstyle"
        android:hint="请再次确定密码"
        android:fontFamily="@font/cute_font"
        android:padding="12dp"
        android:inputType="textPassword"
        app:layout_constraintWidth_percent=".85"
        app:layout_constraintVertical_bias=".7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tips_userPwd2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:paddingLeft="12dp"
        android:text="!提示文字"
        android:fontFamily="@font/cute_font"
        android:textColor="#ff11"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/users_pwd2"
        app:layout_constraintVertical_bias=".1"
        app:layout_constraintWidth_percent=".85" />

    <Button
        android:id="@+id/submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_2state"
        android:text="注    册"
        android:fontFamily="@font/cute_font"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".85"
        app:layout_constraintWidth_percent=".8" />

</androidx.constraintlayout.widget.ConstraintLayout>