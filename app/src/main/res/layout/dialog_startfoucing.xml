<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_dialog_lightcolor"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/focus_flag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:hint="单击输入本次专注目标"
        android:fontFamily="@font/font2"
        android:gravity="center"
        android:padding="12dp"
        android:inputType="text" />

    <LinearLayout
        android:id="@+id/ll_timing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/focus_flag"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <RadioGroup
            android:id="@+id/focus_mode"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="left"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/timing_backward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="倒计时"
                android:fontFamily="@font/font2"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/timing_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正计时"
                android:fontFamily="@font/font2"
                android:textColor="@color/black" />

        </RadioGroup>
        <EditText
            android:id="@+id/focus_studyTime"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="单击输入专注时长"
            android:fontFamily="@font/font2"
            android:gravity="center"
            android:inputType="number"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/focus_min"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:text="分钟"
            android:fontFamily="@font/font2"
            android:textSize="15sp"
            android:gravity="center"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@+id/ll_timing"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/focus_stopTemply"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_2state"
            android:text="暂停计时"
            android:fontFamily="@font/font2"
            android:layout_marginHorizontal="10dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/focus_startOrstop"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_2state"
            android:text="开始专注"
            android:fontFamily="@font/font2"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/focus_end"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_2state"
            android:text="结束计时"
            android:fontFamily="@font/font2"
            android:layout_marginHorizontal="10dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="invisible"/>
    </LinearLayout>


</LinearLayout>