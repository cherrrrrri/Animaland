<?xml version="1.0" encoding="utf-8"?>
<com.jem.liquidswipe.layout.LiquidSwipeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8C785">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="445dp"
        android:layout_height="377dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="71dp"
        android:src="@drawable/guide_image3"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:fontFamily="@font/font2"
        android:text="创新"
        android:textColor="@color/liquid3_bg"
        android:textSize="90dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/imageView"  />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="145dp"
        android:layout_height="139dp"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="38dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/font2"
        android:text="体验"
        android:textColor="@color/liquid3_bg"
        android:textSize="60dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/font2"
        android:gravity="center_horizontal"
        android:text="全新互动模式"
        android:textColor="@color/liquid3_bg"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font2"
        android:gravity="center_horizontal"
        android:layout_marginBottom="21dp"
        android:text="百分百手绘界面"
        android:textColor="@color/liquid3_bg"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104dp"
        android:fontFamily="@font/font2"
        android:gravity="center_horizontal"
        android:text="多功能衍生保障语言学习"
        android:textColor="@color/liquid3_bg"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"  />

    <Button
        android:id="@+id/btn_enterLand"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:background="@drawable/enter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</com.jem.liquidswipe.layout.LiquidSwipeConstraintLayout>

