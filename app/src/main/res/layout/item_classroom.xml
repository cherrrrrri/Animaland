<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/classroom_name"
            android:layout_width="210dp"
            android:layout_height="20dp"
            android:text="语法专讲"
            android:textStyle="bold"
            android:textColor="@color/dark"
            android:autoSizeTextType="uniform"
            android:paddingHorizontal="10dp"
            android:fontFamily="@font/cute_font"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="-1"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="2.5dp"
            android:src="@drawable/user"
            android:layout_toLeftOf="@id/classroom_member"/>

        <TextView
            android:id="@+id/classroom_member"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:paddingLeft="2dp"
            android:text="10"
            android:textSize="10sp"
            android:textColor="@color/dark"
            android:fontFamily="@font/cute_font"
            android:singleLine="true"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/classroom_cover"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/top"
        android:layout_marginTop="3dp"
        android:src="@drawable/classroom_cover1"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_below="@id/classroom_cover"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/classroom_teacher_photo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/teacher" />

        <TextView
            android:id="@+id/classroom_teacher"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/classroom_teacher_photo"
            android:gravity="center"
            android:paddingRight="10dp"
            android:paddingLeft="2dp"
            android:text="陈老师"
            android:textSize="10sp"
            android:textColor="@color/dark"
            android:fontFamily="@font/cute_font"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/classroom_introduction"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"
            android:layout_below="@id/classroom_cover"
            android:text="宾语从句宾语从句宾语从句宾语从句宾语从句宾语从句宾语从句宾语从句"
            android:textSize="10sp"
            android:textColor="@color/dark"
            android:fontFamily="@font/cute_font"
            android:maxLines="2"/>

    </LinearLayout>

</RelativeLayout>